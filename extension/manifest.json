{
  "manifest_version": 3,
  "name": "UI Component Highlighter",
  "version": "2.0",
  "description": "Highlights UI components and adds links based on JSON config file",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/defaultSettings.js", "js/contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "UI Component Highlighter",
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
